<odoo>
    <data>

        <record id="product_add_dim_view_inherit" model="ir.ui.view">
            <field name="name">product.product.dim.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/sheet/group/group[@name='weight']" position="after">
                        <group name="height"  attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                            <label for="height"/>
                            <div class="o_row">
                                <field name="height"/>
                            </div>
                            <label for="length"/>
                            <div class="o_row">
                                <field name="length"/>
                            </div>
                            <label for="width"/>
                            <div class="o_row">
                                <field name="width"/>
                            </div>
                        </group>

                    </xpath>

                </data>
            </field>
        </record>

         <record id="view_template_dim_form_inherit" model="ir.ui.view">
            <field name="name">product.template.stock.property.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <group name="group_lots_and_weight" position="after">
<!--                     <xpath expr="//form/sheet/group[@name='group_lots_and_weight']" position="after">-->
