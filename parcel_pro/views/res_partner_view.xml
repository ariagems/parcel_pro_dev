<odoo>
	<data>
		<record id="view_partner_form_pp" model="ir.ui.view">
			<field name="name">res.partner.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<button name="toggle_active" position="before">

					<button type="object" name="action_post_contact" string="Post Contact" icon="fa-plus">
					</button>

				</button>
				<xpath expr="//div[@class='o_address_format']" position="replace">
					<div class="o_address_format">
						<field name="street" required="1" placeholder="Street..." class="o_address_street"/>
						<field name="street2" placeholder="Street 2..." class="o_address_street"/>
						<field name="city" required="1" placeholder="City" class="o_address_city"/>
						<field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
						<field name="zip" required="1" placeholder="ZIP" class="o_address_zip"/>
						<field name="country_id" required="1" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
					   <field name="contact_created" invisible="1"></field>
					</div>
				</xpath>
				<field name='mobile' position='replace'>
					<field name="mobile"  required="1" />
				</field>
				<field name='name' position='after'>
					<field name="FirstName" required="True" placeholder="First Name" />
					<field name="LastName"  placeholder="Last Name" />
					<field name="NickName"  placeholder="Nick Name" />
				</field>
				<field name='email' position='after'>
					<field name='FaxNo'/>
					<field name='State' required="1"/>
					<field name='Country' required="1"/>
				</field>
				<notebook position='inside'>
					<page string='Parcel Pro'>
							<group col="4">
								<field name='ContactId' readonly="1" />
								<field name='CustomerId' readonly="1" />
								<field name='ApartmentSuite'/>
								<field name='ProvinceRegion'/>
								<field name='ContactType' required="1"/>
								<field name='UPSPickUpType'/>
							</group>
							<group col="4">
								<field name='IsUserDefault'/>
								<field name='IsExpress'/>
								<field name='IsResidential'/>
								<field name='FromParcelPro' invisible="1"/>
								<field name='UserId'/>
							</group>
					</page>
				</notebook>
			</field>
		</record>
	</data>
</odoo>