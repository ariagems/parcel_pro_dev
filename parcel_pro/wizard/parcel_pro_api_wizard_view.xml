<odoo>
    <data>

        <record id="parcel_pro_api_wizard" model="ir.ui.view">
            <field name="name">Parcel Pro API</field>
            <field name="model">parcel.pro.api.wizard</field>
            <field name="arch" type="xml">
                <form string="View Upload Users">
                    <group>
                        <h4>
                            <p>Kindly click on "Generate Button" to fetch data from Parcel Pro.</p>
                        </h4>
                    </group>
                    <group col="4">
                        <field name="api_type" />
                        <field name="date" />
                        <field name="ContactId" attrs="{'invisible': [('api_type', 'not in', ('getgenerate_single_contact'))],'required': [('api_type', 'in', ('getgenerate_single_contact'))]}"/>
                        <field name="QuoteId" attrs="{'invisible': [('api_type', 'not in', ('get_high_value_queue'))],'required': [('api_type', 'in', ('get_high_value_queue'))]}"/>
                        <field name="ShipmentID" attrs="{'invisible': [('api_type', 'not in', ('get_shipment','get_shipment_label'))],'required': [('api_type', 'in', ('get_shipment','get_shipment_label'))]}"/>
                        <field name="create_contact" invisible="1" attrs="{'invisible': [('api_type', 'not in', ('getgenerate_multi_contacts','getgenerate_single_contact'))]}"/>
                    </group>
                    <footer>
                        <button name="action_fetch_data"
                                string="Generate" type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-default"
                                special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_parcel_pro_api" model="ir.actions.act_window">
            <field name="name">Parcel Pro API</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">parcel.pro.api.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="parcel_pro_api_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="main_menu_parcel_pro_api" name="Parcel Pro"  parent="main_menu_parcel" sequence="1"/>
        <menuitem id="submenu_parcel_pro_api" name="API" parent="main_menu_parcel_pro_api"  action="action_parcel_pro_api" sequence="2"/>

         <record id="parcel_pro_response_tree" model="ir.ui.view">
            <field name="name">Parcel Pro Response Tree</field>
            <field name="model">parcel.pro.response</field>
            <field name="arch" type="xml">
                <tree string="Parcel Pro Response" create='false' delete='false'>
                    <field name="name"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="parcel_pro_response_view_form" model="ir.ui.view">
            <field name="name">Parcel Pro Response Form</field>
            <field name="model">parcel.pro.response</field>
            <field name="arch" type="xml">
                <form string="Parcel Pro Response" create='false' edit='false' delete='false'>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="date"/>
                        </group>
                          <group>
                            <field name="message" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_parcel_pro_response" model="ir.actions.act_window">
            <field name="name">Parcel Pro Response</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">parcel.pro.response</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="submenu_parcel_pro_response" name="API Response" parent="main_menu_parcel_pro_api"  action="action_parcel_pro_response" sequence="2"/>

    </data>
</odoo>
